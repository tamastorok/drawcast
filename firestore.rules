rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Users collection rules
    match /users/{fid} {
      allow read: if request.auth != null; // Allow read for authenticated users
      allow write: if request.auth != null && request.resource.data.fid == fid;
    }
    
    // Games collection rules
    match /games/{gameId} {
      allow create: if request.auth != null && request.resource.data.userFid == request.resource.data.fid;
      allow update: if request.auth != null && request.resource.data.userFid == request.resource.data.fid && 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['guesses', 'totalGuesses', 'correctGuesses']));
    }
    
    // Prompts collection rules
    match /prompts/{promptId} {
      allow write: if false; // Only admin can write prompts
    }
  }
}